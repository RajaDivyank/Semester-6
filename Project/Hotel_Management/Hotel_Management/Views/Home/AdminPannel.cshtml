@using Hotel_Management.BAL;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-12 grid-margin stretch-card flex-column">
            @foreach (var Dr in Model.Rows)
            {
                <div class="row">
                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-person fs-3 col"></i>
                                    <div class="card-title col">Users</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["UserCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-person fs-3 col"></i>
                                    <div class="card-title col">Staffs</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["StaffCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-person fs-3 col"></i>
                                    <div class="card-title col">Roles</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["RoleNameCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-door-closed fs-3"></i>
                                    <div class="card-title col">Rooms</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["RoomCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-door-open fs-3"></i>
                                    <div class="card-title col">Room Types</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["RoomTypeCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-door-closed fs-3"></i>
                                    <div class="card-title col">Room Status</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["RoomStatusCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-calendar-check fs-3"></i>
                                    <div class="card-title col">Booking</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["BookingCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-credit-card-2-front fs-3"></i>
                                    <div class="card-title col">Payments</div>
                                </div>
                                <div class="text-center">
                                    <h2>@Dr["PaymentCount"]</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 grid-margin stretch-card">
                        <div class="card bg-gradient-primary text-white">
                            <div class="card-body d-flex flex-column justify-content-between align-items-center">
                                <div class="text-center mb-3 row">
                                    <i class="bi bi-credit-card-2-front fs-3"></i>
                                    <div class="card-title col">Payment Methods</div>
