@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Hotel_Management.Areas.Room.Models.LOC_RoomModel>;

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(/img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Rooms</h1>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Booking Start -->
<div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <div class="row g-2">
                <input id="filter-text" class="form-control border border-black" onkeyup="filterTable()" placeholder="Search" type="text" fdprocessedid="ee7wrj">
            </div>
        </div>
    </div>
</div>
<!-- Booking End -->
<!-- Room Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Our Rooms</h6>
            <h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">Rooms</span></h1>
        </div>
        <div class="row g-4">
            @foreach (var row in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp room-item" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="@row.RoomImage" alt="">
                            <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">$@row.PricePerDay/Day</small>
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0 room-type">@row.TypeName</h5>
                                <div class="ps-2">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3">@row.ChildCapacity Child@* <i class="fa fa-bed text-primary me-2"></i>3 Bed *@</small>
                                <small class="border-end me-3 pe-3">@row.AdultCapacity Adult@* <i class="fa fa-bath text-primary me-2"></i>2 Bath *@</small>
                                <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                            </div>
                            <p class="text-body mb-3">@row.Description</p>
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-sm btn-primary rounded py-2 px-4" asp-area="Room" asp-controller="LOC_UserSideRoom" asp-action="RoomDetail" asp-route-RoomID="@row.RoomID">View Detail</a>
                                <a class="btn btn-sm btn-dark rounded py-2 px-4" asp-area="Booking" asp-controller="LOC_UserSideBooking" asp-action="UserSideBookingView" asp-route-RoomID="@row.RoomID">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
