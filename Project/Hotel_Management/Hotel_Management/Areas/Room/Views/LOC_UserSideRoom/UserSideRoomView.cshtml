<script>
    function filterTable() {
        var input, filter, roomItems, roomType, i, txtValue;
        input = document.getElementById("filter-text");
        filter = input.value.toUpperCase();
        roomItems = document.getElementsByClassName("room-item");
        for (i = 0; i < roomItems.length; i++) {
            roomType = roomItems[i].getElementsByClassName("room-type")[0];
            if (roomType) {
                txtValue = roomType.textContent || roomType.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    roomItems[i].style.display = "";
                } else {
                    roomItems[i].style.display = "none";
                }
            }
        }
    }
</script>
