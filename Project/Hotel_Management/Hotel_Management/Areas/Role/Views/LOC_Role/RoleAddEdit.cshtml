@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model Hotel_Management.Areas.Role.Models.LOC_RoleModel;

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Round Vertical Form</div>
                    <hr>
                    <form method="post" asp-area="Role" asp-controller="LOC_Role" asp-action="SaveForAddEdit">
                        <input type="hidden" asp-for="RoleID" />
                        <div class="form-group">
                            <label>Role</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Role" asp-for="Role">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-light btn-round px-5">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
