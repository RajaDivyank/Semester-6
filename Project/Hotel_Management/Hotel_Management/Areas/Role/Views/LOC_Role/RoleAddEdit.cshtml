@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Hotel_Management.Areas.Role.Models.LOC_RoleModel;
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Role Add/Edit</h4>
            <form method="post" asp-area="Role" asp-controller="LOC_Role" asp-action="SaveForAddEdit">
                <input type="hidden" asp-for="RoleID" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Role Type</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control border border-dark" asp-for="Role" />
                            </div>
                        </div>
                    </div>
                    </div>
                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <button class="btn btn-info" onclick="history.back()">Cancel</button>
            </form>
        </div>
    </div>
</div>
