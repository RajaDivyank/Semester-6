@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model Hotel_Management.Areas.Staff.Models.LOC_StaffModel;

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-11 m-5">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Staff Detail</div>
                    <hr>
                    <form>
                        <div class="form-group row">
                            <div class="col-sm-2">Full Name</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.FirstName @Model.LastName</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Phone Number</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.StaffNumber</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Role</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Role</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Email Address</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.StaffEmail</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Date of Birth</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.DateOfBirth</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Salary</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.Salary</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Date of Joining</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.DateOfJoining</div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">IDProof</div>
                            <div class="col-sm-10 form-control form-control-rounded">@Model.IDProof</div>
                        </div>
                        <div class="row">
                            <form method="post" class="form-group col-6">
                                <button type="button" class="btn btn-primary btn-block" onclick="history.back()">Back</button>
                            </form>
                            <a class="form-group col-6 text-right" asp-area="Staff" asp-controller="LOC_Staff" asp-action="StaffAddEdit" asp-route-StaffID="@Model.StaffID">
                                <button type="button" class="btn btn-success btn-block">Edit</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
