                                        Professional
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> *@
                @* <div class="row">
                    <div class="form-group col-6">
                        <label>ID Proof</label>
                        <input type="file" class="file-upload-default" asp-for="@Model.StaffImageFile">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disable placeholder="Upload Image" asp-for="@Model.StaffImage">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                            </span>
                        </div>
                    </div>
                    @if (Model != null)
                    {
                    <div>
                        <label >@Model.StaffImage</label>
                    </div>
                    }
                </div> *@
                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <button class="btn btn-info" onclick="history.back()">Cancel</button>
            </form>
        </div>
    </div>
</div>
