@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model Hotel_Management.Areas.Staff.Models.LOC_StaffModel;

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Round Vertical Form</div>
                    <hr>
                    <form method="post" asp-area="Staff" asp-controller="LOC_Staff" asp-action="SaveForAddEdit">
                        <input type="hidden" asp-for="StaffID" />
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="First Name" asp-for="FirstName">
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Last Name" asp-for="LastName">
                        </div>
                        <div class="form-group">
                            <label>Salary</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Amount" asp-for="Salary">
                        </div>
                        <div class="form-group">
                            <label>RoleID</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="roleid" asp-for="RoleID">
                        </div>
                        @* <div class="form-group">
                            <label>Role</label>
                            <select class="btn btn-outline-primary btn-md dropdown-toggle" asp-for="RoleID">
                                <option value="none" selected disabled hidden>Select Role</option>
                                @foreach (LOC_RoleModel abc in Model.Roles)
                                {
                                    <option class="bg-light text-dark" value="@abc.CountryId">@abc.CountryName</option>
                                }
                            </select>
                        </div> *@
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Email" asp-for="StaffEmail">
                        </div>
                        <div class="form-group">
                            <label for="input-7">Phone Number</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Phone Number" asp-for="StaffNumber">
                        </div>
                        <div class="form-group">
                            <label for="input-8">Date Of Birth</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Date" asp-for="DateOfBirth">
                        </div>
                        <div class="form-group">
                            <label for="input-8">Date Of Joining</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Date" asp-for="DateOfJoining">
                        </div>
                        <div class="form-group">
                            <label for="input-8">ID Proof</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Proof" asp-for="IDProof">
                        </div>
                        <div class="form-group">
                            <label for="input-8">ID Proof Photo</label>
                            <input type="text" class="form-control form-control-rounded" placeholder="Photo" asp-for="IDProofPhotoPath">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-light btn-round px-5">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
