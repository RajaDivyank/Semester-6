@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Hotel_Management.Areas.Staff.Models.LOC_StaffModel;
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Staff Add/Edit</h4>
            <form class="form-sample" method="post" asp-area="Staff" asp-controller="LOC_Staff" asp-action="SaveForAddEdit">
                <input type="hidden" asp-for="@Model.StaffID" />
                <p class="card-description">
                    Personal info
                </p>
                <div class="row">
                    <div class="form-group col-12">
                        <label>Profile Image</label>
                        <input type="file" class="file-upload-default" asp-for="@Model.StaffImageFile">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disable placeholder="Upload Image" asp-for="@Model.StaffImage">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                            </span>
                        </div>
                        @if (Model != null)
                        {
                            <div>
                                <label>@Model.StaffImage</label>
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">First Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control border border-dark" asp-for="FirstName"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Last Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control border border-dark" asp-for="LastName"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Mobile Number</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control border border-dark" asp-for="StaffNumber"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" for="exampleInputEmail1">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control border border-dark" id="exampleInputEmail1" placeholder="Email" asp-for="StaffEmail">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Role</label>
                            <div class="col-sm-9">
                                <select class="form-control border border-dark" asp-for="RoleID">
                                    <option value="none" selected disabled hidden>Select Role</option>
                                    @foreach (var abc in Model.roles)
                                    {
                                        <option class="bg-light text-dark" value="@abc.RoleID">@abc.Role</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">User ID</label>
                            <div class="col-sm-9">
                                <input class="form-control border border-dark" placeholder="UserID" asp-for="UserID" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Date Of Birth</label>
                            <div class="col-sm-9">
                                <input class="form-control border border-dark" placeholder="dd/mm/yyyy" asp-for="DateOfBirth" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Date Of Joining</label>
                            <div class="col-sm-9">
                                <input class="form-control border border-dark" placeholder="dd/mm/yyyy" asp-for="DateOfJoining" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">First Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control border border-dark" asp-for="Salary" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label></label>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">ID Proof</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control border border-dark" asp-for="IDProof"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12">
                        <label>Profile Image</label>
                        <input type="file" class="file-upload-default" asp-for="@Model.IDProofPhotoFile">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disable placeholder="Upload Image" asp-for="@Model.IDProofPhotoPath">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                            </span>
                        </div>
                        @if (Model != null)
                        {
                            <div>
                                <label>@Model.IDProofPhotoPath</label>
                            </div>
                        }
                    </div>
                </div>
                @* <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category</label>
                            <div class="col-sm-9">
