@using Hotel_Management.BAL;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    bool isAdmin = false;
    bool isManager = false;
    if (CommonVariables.IsAdmin())
    {
        isAdmin = true;
    }
    if (CommonVariables.IsManager())
    {
        isManager = true;
    }
}
@model IEnumerable<Hotel_Management.Areas.Staff.Models.LOC_StaffModel>;
<div class="row">
    <div class="col-md-12">
        <div class="card">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-@(Convert.ToBoolean(TempData["Bool"]) ? "success" : "danger")">
                    @TempData["Message"]
                </div>
            }
            <div class="card-body">
                <h5 class="card-title">Staff Search</h5>
                <div class="row">
                    <input class="col form-control me-2 m-3 border border-info" type="text" id="Name" placeholder="Filter by Staff Name" oninput="filterstaff()" />
                    <input class="col form-control me-2 m-3 border border-info" type="text" id="Email" placeholder="Filter by Email Address" oninput="filterstaff()" />
                    <input class="col form-control me-2 m-3 border border-info" type="text" id="Role" placeholder="Filter by Role" oninput="filterstaff()" />
                </div>
                <form method="post" asp-controller="LOC_Staff" asp-action="StaffSearch" asp-area="Staff" class="d-flex w-80" role="search">
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="First Name" name="FirstName" />
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="Email" name="StaffEmail" />
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="Role" name="Role" />
                    <button type="submit" class="btn btn-outline-success my-3 h-50">Filter</button>
                </form>
                <div class="table-responsive pt-3">
                    <table class="table table-striped project-orders-table ">
                        <thead>
                            <tr>
                                <th class="ml-5">Staff ID</th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Email</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model)
                            {
                                <tr class="staff-item" data-name="@row.FirstName @row.LastName" data-email="@row.StaffEmail" data-role="@row.Role">
                                    <td>@row.StaffID</td>
                                    <td>@row.FirstName @row.LastName</td>
                                    <td>@row.Role</td>
                                    <td>@row.StaffEmail</td>
                                    <td>@Convert.ToDateTime(row.Created).ToString("dd-MM-yyyy")</td>
                                    <td>@Convert.ToDateTime(row.Modified).ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (CommonVariables.UserID() == @row.UserID)
                                            {
                                                <a asp-area="Staff" asp-controller="LOC_Staff" asp-action="StaffAddEdit" asp-route-StaffID="@row.StaffID" class="btn btn-success btn-sm btn-icon-text mr-3">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a onclick="return confirmDelete();" asp-area="Staff" asp-controller="LOC_Staff" asp-action="DeleteByStaffID" asp-route-StaffID="@row.StaffID" class="btn btn-danger btn-sm btn-icon-text mr-3">
                                                    <i class="bi bi-trash3"></i>
                                                </a>
                                            }
                                            <a asp-area="Staff" asp-controller="LOC_Staff" asp-action="StaffDetail" asp-route-StaffID="@row.StaffID" class="btn btn-info btn-sm btn-icon-text">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@if (isAdmin == true)
{
    <div class="floating-container">
        <a asp-area="Staff" asp-controller="LOC_Staff" asp-action="StaffAddEdit"><div class="floating-button">+</div></a>
    </div>

}

<script>
    function filterstaff() {
        var inputName = document.getElementById('Name').value.toUpperCase();
        var inputEmail = document.getElementById('Email').value.toUpperCase();
        var inputRole = document.getElementById('Role').value.toUpperCase();
        var staffs = document.getElementsByClassName('staff-item');
        for (var i = 0; i < staffs.length; i++) {
            var StaffName = staffs[i].getAttribute('data-name').toUpperCase();
            var StaffEmail = staffs[i].getAttribute('data-email').toUpperCase();
            var StaffRole = staffs[i].getAttribute('data-role').toUpperCase();
            var display = (StaffName.indexOf(inputName) > -1 && StaffEmail.indexOf(inputEmail) > -1 && StaffRole.indexOf(inputRole) > -1) ? 'table-row' : 'none';
            staffs[i].style.display = display;
        }
    }
    function confirmDelete() {
        return confirm("Are you sure you want to delete this Staff Member?");
    }
</script>
