@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Hotel_Management.Areas.Roomtype.Models.LOC_RoomTypeModel>;

<div class="row">
    <div class="col-md-12">
        @if (TempData["Message"] != null)
        {
            @if (Convert.ToBoolean(TempData["Bool"]))
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
        }
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Room Type Search</h5>
                <input id="filter-text" class="form-control me-2 m-3 border border-info" onkeyup="filterTable(this)" placeholder="Search" type="text" fdprocessedid="ee7wrj">
                @* <form method="post" asp-controller="LOC_RoomType" asp-action="RoomTypeSearch" asp-area="Roomtype" class="d-flex w-80" role="search">
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="Type" name="TypeName" />
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="Price" name="PricePerDay" />
                    <button type="submit" class="btn btn-outline-success my-3 h-50">Filter</button>
                </form> *@
                <div class="table-responsive pt-3">
                    <table class="table table-striped project-orders-table">
                        <thead>
                            <tr>
                                <th class="ml-5">Role Type ID</th>
                                <th>Room Type</th>
                                <th>Price Per Day</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var row in Model)
                        {
                            <tbody id="ItemTableBody">
                                <tr>
                                    <td>@row.RoomTypeID</td>
                                    <td>@row.TypeName</td>
                                    <td>@row.PricePerDay</td>
                                    <td>@Convert.ToDateTime(row.Created).ToString("dd-MM-yyyy")</td>
                                    <td>@Convert.ToDateTime(row.Modified).ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <form method="post" asp-area="Roomtype" asp-controller="LOC_RoomType" asp-action="RoomTypeAddEdit" asp-route-RoomTypeID="@row.RoomTypeID">
                                                <button type="submit" class="btn btn-success btn-sm btn-icon-text mr-3">
                                                    Edit
                                                    <i class="typcn typcn-edit btn-icon-append"></i>
                                                </button>
                                            </form>
                                            <form method="post" asp-area="Roomtype" asp-controller="LOC_RoomType" asp-action="DeleteByRoomTypeID" asp-route-RoomTypeID="@row.RoomTypeID">
                                                <button type="submit" class="btn btn-danger btn-sm btn-icon-text">
                                                    Delete
                                                    <i class="typcn typcn-delete-outline btn-icon-append"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="floating-container">
    <a asp-area="Roomtype" asp-controller="LOC_RoomType" asp-action="RoomTypeAddEdit"><div class="floating-button">+</div></a>
</div>
<script>
    function filterTable(searchText) {
        console.log(searchText.value);
        var stext = searchText.value.toLowerCase();
        $('#ItemTableBody tr').each(function () {
            var row = $(this);
            var id = row.find('td:eq(0)').text().toLowerCase();
            var type = row.find('td:eq(1)').text().toLowerCase();
            var price = row.find('td:eq(2)').text().toLowerCase();
            var created = row.find('td:eq(3)').text().toLowerCase();
            var modified = row.find('td:eq(4)').text().toLowerCase();

            if (id.includes(stext) || type.includes(stext) || price.includes(stext) || created.includes(stext) || modified.includes(stext)) {
                row.show();
            } else {
                row.hide();
            }
        });
    }
</script>
