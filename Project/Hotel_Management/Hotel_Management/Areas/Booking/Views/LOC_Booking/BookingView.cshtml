@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Hotel_Management.Areas.Booking.Models.LOC_BookingModel>;

<div class="row">
    <div class="col-md-12">
        @if (TempData["Message"] != null)
        {
            @if (Convert.ToBoolean(TempData["Bool"]))
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
        }
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Room Search</h5>
                <input id="filter-text" class="form-control me-2 m-3 border border-info" onkeyup="filterTable(this)" placeholder="Search" type="text" fdprocessedid="ee7wrj">
                @* <form method="post" asp-controller="LOC_Booking" asp-action="" asp-area="Booking" class="d-flex w-80" role="search">
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="Name" name="RegistrationName" />
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="Number" name="Number" />
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="TotalDays" name="TotalDays" />
                    <button type="submit" class="btn btn-outline-success my-3 h-50">Filter</button>
                </form> *@
                <div class="table-responsive pt-3">
                    <table class="table table-striped project-orders-table">
                        <thead>
                            <tr>
                                <th class="ml-5">Booking ID</th>
                                <th>RegistrationName</th>
                                <th>Mobile Number</th>
                                <th>totalDays</th>
                                <th>Status</th>
                                <th>Check In Date</th>
                                <th>Check Out Date</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var row in Model)
                        {
                            <tbody id="ItemTableBody">
                                <tr>
                                    <td>@row.BookingID</td>
                                    <td>@row.RegistrationName</td>
                                    <td>@row.MobileNumber</td>
                                    <td>@row.TotalDays</td>
                                    <td>@row.BookingStatus</td>
                                    <td>@Convert.ToDateTime(row.CheckIn).ToString("dd-MM-yyyy")</td>
                                    <td>@Convert.ToDateTime(row.CheckOut).ToString("dd-MM-yyyy")</td>
                                    <td>@Convert.ToDateTime(row.Created).ToString("dd-MM-yyyy")</td>
                                    <td>@Convert.ToDateTime(row.Created).ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <a asp-area="Booking" asp-controller="LOC_Booking" asp-action="BookingAddEdit" asp-route-BookingID="@row.BookingID" class="btn btn-success btn-sm btn-icon-text mr-3">
                                                Edit
                                                <i class="typcn typcn-edit btn-icon-append"></i>
                                            </a>
                                            <a asp-area="Booking" asp-controller="LOC_Booking" asp-action="DeleteByBookingID" asp-route-BookingID="@row.BookingID" class="btn btn-danger btn-sm btn-icon-text mr-3">
                                                Delete
                                                <i class="typcn typcn-delete-outline btn-icon-append"></i>
                                            </a>
                                            <a asp-area="Booking" asp-controller="LOC_Booking" asp-action="BookingDetail" asp-route-BookingID="@row.BookingID" class="btn btn-info btn-sm btn-icon-text">
                                                Detail
                                                <i class="typcn typcn-delete-outline btn-icon-append"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@* <div class="floating-container">
    <a asp-area="Booking" asp-controller="LOC_Booking" asp-action="BookingAddEdit"><div class="floating-button">+</div></a>
</div> *@
<script>
    function filterTable(searchText) {
        console.log(searchText.value);
        var stext = searchText.value.toLowerCase();
        $('#ItemTableBody tr').each(function () {
            var row = $(this);
            var id = row.find('td:eq(0)').text().toLowerCase();
            var name = row.find('td:eq(1)').text().toLowerCase();
            var number = row.find('td:eq(2)').text().toLowerCase();
            var days = row.find('td:eq(3)').text().toLowerCase();
            var checkin = row.find('td:eq(4)').text().toLowerCase();
            var checkout = row.find('td:eq(5)').text().toLowerCase();
            var created = row.find('td:eq(6)').text().toLowerCase();
            var modified = row.find('td:eq(7)').text().toLowerCase();

            if (id.includes(stext) || name.includes(stext) || number.includes(stext) || days.includes(stext) || checkin.includes(stext) || checkout.includes(stext) || created.includes(stext) || modified.includes(stext)) {
                row.show();
            } else {
                row.hide();
            }
        });
    }
</script>
