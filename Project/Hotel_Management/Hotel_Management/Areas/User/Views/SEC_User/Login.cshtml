@using Hotel_Management.BAL;
@{
	Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model UserLoginModel;
<div class="container-fluid page-body-wrapper full-page-wrapper">
	<div class="content-wrapper d-flex align-items-center auth px-0">
		<div class="row w-100 mx-0">
			<div class="col-lg-4 mx-auto">
				<div class="auth-form-light text-left py-5 px-4 px-sm-5">
					<div class="fa-black-tie">
						@* <img src="~/Adminassets/images/logo-dark.svg" alt="logo"> *@
						<h3>Hotelier</h3>
					</div>
					<h4>Hello! let's get started</h4>
					<h6 class="font-weight-light">Sign in to continue.</h6>
					@if (TempData["ErrorMessage"] != null)
					{
						<div class="text-danger">
							@Html.Raw(@Convert.ToString(TempData["ErrorMessage"]))
						</div>
					}
					<form class="pt-3" method="post" asp-area="User" asp-controller="SEC_User" asp-action="Save">
						<div class="form-group">
							<input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username" asp-for="UserName">
						</div>
						<span asp-validation-for="UserName"></span>
						<div class="form-group">
							<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" asp-for="Password">
						</div>
						<span asp-validation-for="Password"></span>
						<div class="mt-3">
							<button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
						</div>
						<div class="my-2 d-flex justify-content-between align-items-center">
							<div class="form-check">
								@* <label class="form-check-label text-muted">
									<input type="checkbox" class="form-check-input">
									Keep me signed in
								</label> *@
							</div>
							@* <a asp-area="User" asp-controller="SEC_User" asp-action="SignUp" asp-route-UserID="@CommonVariables.UserID()" class="auth-link text-black">Forgot password?</a> *@
						</div>
						@* <div class="mb-2">
							<button type="button" class="btn btn-block btn-facebook auth-form-btn">
								<i class="typcn typcn-social-facebook mr-2"></i>Connect using facebook
							</button>
						</div> *@
						<div class="text-center mt-4 font-weight-light">
							Don't have an account? <a asp-area="User" asp-controller="SEC_User" asp-action="SignUp" class="text-primary">Create</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- content-wrapper ends -->
</div>
