@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model IEnumerable<Hotel_Management.Areas.User.Models.LOC_UserModel>;
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">User Search</h5>
                        <form class="d-flex w-80" role="search">
                            <input class="form-control me-2 m-3" type="text" placeholder="User Name" aria-label="Search" name="CountryName">
                            <button class="btn btn-outline-success my-3 h-50" type="submit">Search</button>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">UserID</th>
                                        <th scope="col">User Name</th>
                                        <th scope="col">User Number</th>
                                        <th scope="col">Password</th>
                                    </tr>
                                </thead>
                                @foreach (var row in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@row.UserID</td>
                                            <td>@row.UserName</td>
                                            <td>@row.UserNumber</td>
                                            <td>@row.Password</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
