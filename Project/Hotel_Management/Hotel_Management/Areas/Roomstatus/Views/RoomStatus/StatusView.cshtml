@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Hotel_Management.Areas.Roomstatus.Models.LOC_RoomStatusModel>;

<div class="row">
    <div class="col-md-12">
        @if (TempData["Message"] != null)
        {
            @if (Convert.ToBoolean(TempData["Bool"]))
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
        }
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Status Search</h5>
                <input class="col form-control me-2 m-3 border border-info" type="text" id="Status" placeholder="Filter by Status" oninput="filterstatus()" />
                <form method="post" asp-controller="RoomStatus" asp-action="StatusSearch" asp-area="Roomstatus" class="d-flex w-80" role="search">
                    <input class="form-control me-2 m-3 border border-info" type="text" placeholder="status" name="status" />
                    <button type="submit" class="btn btn-outline-success my-3 h-50">Filter</button>
                </form>
                <div class="table-responsive pt-3">
                    <table class="table table-striped project-orders-table">
                        <thead>
                            <tr>
                                <th class="ml-5">Status ID</th>
                                <th>Room Status Type</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model)
                            {
                                <tr class="status-item" data-status="@row.Status">
                                    <td>@row.StatusID</td>
                                    <td>@row.Status</td>
                                    <td>@Convert.ToDateTime(row.Created).ToString("dd-MM-yyyy")</td>
                                    <td>@Convert.ToDateTime(row.Modified).ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <a asp-area="Roomstatus" asp-controller="RoomStatus" asp-action="StatusAddEdit" asp-route-StatusID="@row.StatusID" class="btn btn-success btn-sm btn-icon-text mr-3">
                                                <i class="typcn typcn-edit btn-icon-append"></i>
                                            </a>
                                            <a onclick="return confirmDelete();" asp-area="Roomstatus" asp-controller="RoomStatus" asp-action="DeleteByStatusID" asp-route-StatusID="@row.StatusID" class="btn btn-danger btn-sm btn-icon-text">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="floating-container">
    <a asp-area="Roomstatus" asp-controller="RoomStatus" asp-action="StatusAddEdit"><div class="floating-button">+</div></a>
</div>
<script>
    function filterstatus() {
        var inputStatus = document.getElementById('Status').value.toUpperCase();
        var status = document.getElementsByClassName('status-item');
        for (var i = 0; i < status.length; i++) {
            var StatusName = status[i].getAttribute('data-status').toUpperCase();
            var display = (StatusName.indexOf(inputStatus) > -1) ? 'table-row' : 'none';
            status[i].style.display = display;
        }
    }
    function confirmDelete() {
        return confirm("Are you sure you want to delete this Project?");
    }
</script>
