@{
}
@model List<PersonModel>
<h1>Persons</h1>
<a class="btn btn-primary" asp-controller="Person" asp-action="AddEdit">Add Person</a>
<div class="container">
    <table>
        <thead>
            <tr>
                <th>Person ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Buttons</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.PersonId</td>
                    <td>@i.PersonName</td>
                    <td>@i.PersonEmail</td>
                    <td>@i.PersonContact</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-outline-primary" asp-controller="Person" asp-action="AddEdit" asp-route-id="@i.PersonId">
                                Edit
                            </a>
                            <a class="btn btn-outline-success" asp-controller="Person" asp-action="PersonDetails" asp-route-id="@i.PersonId">
                                Details
                            </a>
                            <a class="btn btn-outline-danger" asp-controller="Person" asp-action="DeleteByPersonID" asp-route-id="@i.PersonId">
                                Delete
                            </a>
                            @*@Html.ActionLink("Delete","DeleteByPersonID","Person",new {id = @i.personID})*@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>